# BugBridge API Environment Variables
# Copy this file to .env and fill in your actual values

# Environment (development, production, local)
ENV=development

# Database Configuration
DB_URI=mongodb://localhost:27017/bugbridge
DB_NAME=bugbridge

# Server Configuration
BASE_URL=http://localhost:8080
PORT=8080

# JWT Secret (generate a strong secret key)
JWT_SECRET=your-super-secret-jwt-key-here

# MongoDB Atlas (if using cloud database)
# DB_URI=mongodb+srv://username:password@cluster.mongodb.net/bugbridge?retryWrites=true&w=majority

# Production Environment Variables
# ENV=production
# BASE_URL=https://your-api-domain.com
# PORT=8080
